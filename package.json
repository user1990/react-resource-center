{
  "name": "react-resource-center",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "material-ui": "^0.19.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.14",
    "react-tap-event-plugin": "^3.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "standard": "^10.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "prettier 'src/**/*.js' 'src/components/**/*.js' '*.js' --write --single-quote && standard --fix"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "fetch",
      "FormData",
      "describe",
      "it",
      "beforeEach",
      "expect",
      "handleClose",
      "state",
      "handleNext",
      "handlePrev",
      "handleChange",
      "formatLabelToProperty",
      "handleFilePath",
      "handleFormData",
      "handleDialogClose",
      "componentDidMount",
      "handleTabChange"
    ],
    "parser": "babel-eslint"
  }
}
